extends ./layout.jade

block uniqueStyles
	link(rel='stylesheet' type='text/css' href='css/contact.css')

block content
	form#contactForm.contact(action='/contact' method='post')
		fieldset#contactHeader.contact
			h1 Contact Form
			p Please feel free to send me any questions, comments, or feedback. I would love to hear from you.
		fieldset#contactBody
			ul
				li
					label(for='name') name
						span(class='fa fa-user')
					input.userInfo(type='text' name='name' placeholder='Your Name' required autofocus)
				li
					label(for='email') email
						span(class='fa fa-envelope')
					input.userInfo(type='email' name='email' placeholder='you@emailprovider.com' required)
				li
					label(for='message') message
						span(class='fa fa-comment')
					textarea.userInfo(name='message' placeholder="Let's work together!" required)
				li
					input(type='submit' name='submit' value='send')
	section#informationArea
		div#contactInfo
			h1 Information	
			a(title='email Brian Koscielniak' target='_self' href='mailto:bkoscielniak31@gamil.com') Email me
			a Resume
			a(class='qrLink') QR 
				span(class='fa fa-qrcode') 
		div#networks
			h1 Networks
			a(title='Brian Koscielniak at GitHub' href='https://github.com/Brian-Koscielniak') GitHub
			a(title='Brian Koscielniak at Linkedin' href='http://www.linkedin.com/in/bkoscielniak') Linkedin
block uniqueScripts
	script(type='text/javascript' src='js/contact.js')
